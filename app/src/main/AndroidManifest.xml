<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="georgi.com.BlogApp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Activities.Account.LoginActivity"
            android:windowSoftInputMode="adjustPan" >

        </activity>


        <activity
            android:name=".Activities.Account.RegisterActivity"
            android:windowSoftInputMode="adjustPan" >

        </activity>


        <activity
            android:name=".Activities.Posts.LatestPostsActivity">

        </activity>


        <activity android:name=".Activities.Account.AccountActivity">

        </activity>


        <activity
            android:name=".Activities.Posts.PostActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>


        <activity android:name=".Activities.Posts.CreateNewPostActivity">

        </activity>


        <activity android:name=".Activities.Posts.YourPostsActivity">

        </activity>


        <activity android:name=".Activities.Posts.EditPostActivity">

        </activity>


        <activity android:name=".Activities.Account.ViewOtherUserActivity">

        </activity>


        <activity android:name=".Activities.Account.EditAccountActivity">

        </activity>

    </application>

</manifest>