<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/view_other_user_image" />

    <TextView
        android:text="Full name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_other_user_fullName"
        android:layout_alignTop="@+id/view_other_user_image"
        android:layout_toRightOf="@+id/view_other_user_image"
        android:layout_toEndOf="@+id/view_other_user_image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/view_other_user_email"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/view_other_user_fullName"
        android:layout_alignLeft="@+id/view_other_user_fullName"
        android:layout_alignStart="@+id/view_other_user_fullName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_other_user_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_other_user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
</RelativeLayout>